<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="../public/styles/main.css" type="text/css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="apple-touch-icon" sizes="180x180" href="/public/images/favico/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/public/images/favico/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/public/images/favico/favicon-16x16.png">
    <link rel="manifest" href="/public/images/favico/site.webmanifest">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js" type="text/javascript"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <title>Login / IO Gallery</title>
</head>
<body>
    <div id="topsbar" class="topsbar">
        <div class="logDecoy"></div>
        <div class="topBtns">
            <p class="topAct left" onclick="redir('/')">FRONT</p>
            <div class="minilogo" onclick="redir('/')" style="margin-top: -10px;" onclick="javascript:window.location='/'"><a>▽</a></div>
            <p class="topAct right" style="opacity: 0 !important;" disabled>ALBUMS</p>
        </div>
        <div class="logoutBtn">
            <p class="topLogout" method="post" style="opacity: 0 !important;" disabled>LOGOUT</p> 
        </div>
    </div>
    <header class="header" style="width: 100%; height: 100vh;">
        <div class="loginHold">
            <div class="loginContent">
                <div class="loginItems">
                    <form method="post" class="loginForm">
                        <input placeholder="PASSWORD" type="password" id="pass" name="pass">
                        <button type="submit">ENTER</button>
                    </form>
                    <p class="passManager"><a href="/auth/setpass">Change Password / First Access</a></p>
                </div>
                <img src="../<%= backImg %>" alt="">
            </div>
        </div>
    </header>
    <div class="foot"><p>Copyright © 2021 <a href="https://github.com/Joseph-Kaiser/IO_Gallery">Joseph-Kaiser</a></p></div>
    <script defer src="../public/javascripts/uiHandlers.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            if ("<%= exps %>" === "true") {
                swal('', 'Wrong Password', "error");
            }
            if ("<%= first %>" === "true") {
                let field = document.getElementById('pass')
                swal('First Access Detected', `You'll be redirected to set your password`, "info").then(function() {
                    window.location = "/auth/setpass";
                });;
                field.placeholder = "Set your password"; 
            }
        })
    </script>
</body>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.2/TweenMax.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.2/utils/Draggable.min.js"></script>
    <script src="/public/javascripts/parallax.js"></script>
</html>